@model CreateCinemaViewModel

<h3>Create cinema:</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="NewName" class="custom-control-label"></label>
                <input type="text" asp-for="NewName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewLocation" class="custom-control-label"></label>
                <input type="text" asp-for="NewLocation" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <select asp-for="MovieId" asp-items="@(new SelectList(ViewBag.Movies, "Id", "Title"))"></select>
            </div>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
    </div>
</div>