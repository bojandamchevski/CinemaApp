@model CreateMovieViewModel

<h3>Create movie:</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="NewTitle" class="custom-control-label"></label>
                <input type="text" asp-for="NewTitle" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewDescription" class="custom-control-label"></label>
                <input type="text" asp-for="NewDescription" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewGenre" class="control-label"></label>
                <select asp-for="NewGenre" asp-items="@Html.GetEnumSelectList<MovieGenreEnum>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="CinemaId" class="control-label"></label>
                <select asp-for="CinemaId" asp-items="@(new SelectList(ViewBag.Cinemas, "Id", "Name"))"></select>
            </div>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
    </div>
</div>